<form method="post" action="{{ path('app_store_restore', {'id': store.id}) }}" data-confirm="Confirmer la restauration de ce magasin ?" data-confirm-type="store" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('restore' ~ store.id) }}">
    <button class="btn btn-sm btn-danger" type="submit" {% if not store.deletedAt %}disabled{% endif %}><i class="fa-solid fa-rotate-left me-1"></i>Restaurer</button>
</form>