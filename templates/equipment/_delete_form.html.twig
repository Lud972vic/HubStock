{% set isArchived = equipment.deletedAt is not null %}
<form method="post" action="{{ path('app_equipment_delete', {'id': equipment.id}) }}" {% if not isArchived %}data-confirm="Archiver le matériel « {{ equipment.reference }}{% if equipment.name %} — {{ equipment.name }}{% endif %} » ?" data-confirm-type="equipment"{% endif %}>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipment.id) }}">
    <button class="btn btn-sm btn-outilne-danger" {% if isArchived %}disabled title="Déjà archivé."{% endif %}><i class="fa-solid fa-box-archive me-1"></i>Archiver</button>
</form>
