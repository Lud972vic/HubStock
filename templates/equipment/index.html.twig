{#
  Template: Liste des matériels
  Objectif: Permettre le filtrage par catégorie, la recherche texte, et la navigation paginée.
  Données attendues: equipment (liste), categories, categoryId, q, page, pages, limit.
  Notes:
    - Les badges affichent le nombre d’affectations par matériel.
    - Les filtres sont persistés dans la pagination via la query string.
#}
{% extends 'base.html.twig' %}

{% block title %}Matériels{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Matériels</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_equipment_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus me-1"></i>Nouveau matériel</a>
        {% endif %}
    </div>

    <form method="get" class="row g-3 mb-3">
        <div class="col-sm-3">
            <label class="form-label">Catégorie</label>
            <select name="category" class="form-select" onchange="this.form.submit()">
                <option value="">Toutes</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}" {% if categoryId is defined and categoryId == cat.id %}selected{% endif %}>{{ cat.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-sm-4">
            <label class="form-label">Recherche</label>
            <input type="text" name="q" value="{{ q|default('') }}" class="form-control" placeholder="Nom ou référence">
        </div>
        <div class="col-sm-3">
            <label class="form-label">Archivés</label>
            <div class="form-check form-switch">
                <input class="form-check-input form-switch bg-primary" type="checkbox" id="toggleArchivedEq" name="archived" value="1" {% if archived|default(false) %}checked{% endif %}>
                <label class="form-check-label" for="toggleArchivedEq">Inclure les archivés</label>
            </div>
        </div>
        <div class="col-sm-3 align-self-end d-flex gap-2">
            <input type="hidden" name="limit" value="{{ limit }}">
            <button class="btn btn-primary" type="submit"><i class="fa-solid fa-filter me-1"></i>Filtrer</button>
            <a class="btn btn-primary" href="?"><i class="fa-solid fa-rotate-right me-1"></i>Réinitialiser</a>
        </div>
    </form>

    <div class="card">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Référence</th>
                <th>Catégorie</th>
                <th>État</th>
                <th>Stock</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>
                    {{ equipment.name }}
                    {% if equipment.deletedAt %}
                        <span class="badge bg-danger ms-2">Mat. archivé</span>
                        {% else %}
                        <span class="badge bg-info ms-2">Mat. actif</span>
                    {% endif %}
                    {# Disponibilité: En stock si stockQuantity > 0, sinon Assigné si affectations actives #}
                    {% set activeAssigned = 0 %}
                    {% for a in equipment.assignments %}
                        {% if a.deletedAt is null %}
                            {% set remaining = a.quantity - (a.returnedQuantity ?: 0) %}
                            {% if remaining > 0 %}
                                {% set activeAssigned = activeAssigned + remaining %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                    {% if equipment.stockQuantity > 0 %}
                        <span class="badge bg-primary ms-2">En stock</span>
                    {% elseif activeAssigned > 0 %}
                        <span class="badge bg-primary ms-2">Assigné</span>
                    {% else %}
                        <span class="badge bg-danger ms-2">Indisponible</span>
                    {% endif %}
                    <span class="badge bg-primary ms-2">Affectations: {{ equipment.assignments|length }}</span>
                </td>
                <td>{{ equipment.reference }}</td>
                <td>{{ equipment.category.name }}</td>
                <td>
                    {% set s = equipment.state %}
                    {% set badge = s == 'neuf' ? 'primary' : (s == 'utilisé' ? 'info' : 'danger') %}
                    <span class="badge bg-{{ badge }} text-uppercase">{{ s }}</span>
                </td>
                <td>{{ equipment.stockQuantity }}</td>
                <td>
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="{{ path('app_equipment_show', {'id': equipment.id}) }}" class="btn btn-sm btn-primary"><i class="fa-solid fa-eye me-1"></i>Voir</a>
                        {% if not equipment.deletedAt %}
                            <a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen me-1"></i>Éditer</a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            {% if not equipment.deletedAt %}
                                {{ include('equipment/_delete_form.html.twig') }}
                            {% else %}
                                {{ include('equipment/_restore_form.html.twig') }}
                            {% endif %}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center text-muted">Aucun matériel pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <nav class="mt-3" aria-label="Pagination">
        <ul class="pagination justify-content-end">
            <li class="page-item {% if page <= 1 %}disabled{% endif %}">
                <a class="page-link" href="?page={{ page - 1 }}&limit={{ limit }}{% if categoryId is defined and categoryId %}&category={{ categoryId }}{% endif %}{% if q is defined and q %}&q={{ q }}{% endif %}{% if archived|default(false) %}&archived=1{% endif %}">Précédent</a>
            </li>
            <li class="page-item disabled"><span class="page-link">Page {{ page }} / {{ pages }}</span></li>
            <li class="page-item {% if page >= pages %}disabled{% endif %}">
                <a class="page-link" href="?page={{ page + 1 }}&limit={{ limit }}{% if categoryId is defined and categoryId %}&category={{ categoryId }}{% endif %}{% if q is defined and q %}&q={{ q }}{% endif %}{% if archived|default(false) %}&archived=1{% endif %}">Suivant</a>
            </li>
        </ul>
    </nav>
{% endblock %}
