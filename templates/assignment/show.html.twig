{% extends 'base.html.twig' %}

{% block title %}Détail affectation{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">
            Détail affectation
            {% if assignment.deletedAt %}
                <span class="badge bg-danger ms-2">Archivé</span>
            {% endif %}
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_assignment_index') }}" class="btn btn-sm btn-outilne-primary"><i class="fa-solid fa-arrow-left me-1"></i>Retour</a>
            {% if not assignment.deletedAt %}
                <a href="{{ path('app_assignment_edit', {'id': assignment.id}) }}" class="btn btn-outilne-info"><i class="fa-solid fa-pen me-1"></i>Éditer</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') and assignment.deletedAt %}
                {{ include('assignment/_restore_form.html.twig') }}
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">
                    <h2 class="h5 mb-0"><i class="fas fa-tasks me-2"></i>Détails de l'affectation</h2>
                </div>
                <table class="table table-bordered border-primary thin-border mb-0">
                    <tbody>
                        <tr>
                            <th>#</th>
                            <td>{{ assignment.id }}</td>
                        </tr>
                        <tr>
                            <th>Affecté le</th>
                            <td>{{ assignment.assignedAt ? assignment.assignedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Quantité</th>
                            <td>{{ assignment.quantity }}</td>
                        </tr>
                        <tr>
                            <th>Retournée</th>
                            <td>{{ assignment.returnedQuantity }}</td>
                        </tr>
                        <tr>
                            <th>Retourné le</th>
                            <td>{{ assignment.returnedAt ? assignment.returnedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">
                    <h2 class="h5 mb-0"><i class="fas fa-store me-2"></i>Informations du magasin</h2>
                </div>
                <table class="table table-bordered border-primary thin-border mb-0">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td><a href="{{ path('app_assignment_index', {'store_q': assignment.store.name}) }}" class="text-primary text-decoration-none">{{ assignment.store.name }} <i class="fas fa-filter fa-xs"></i></a></td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ assignment.store.address }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0"><i class="fas fa-box me-2"></i>Informations de l'équipement</h2>
                </div>
                <table class="table table-bordered border-primary thin-border mb-0">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td><a href="{{ path('app_equipment_index', {'q': assignment.equipment.name}) }}" class="text-primary text-decoration-none">{{ assignment.equipment.name }} <i class="fas fa-filter fa-xs"></i></a></td>
                        </tr>
                        <tr>
                            <th>Référence</th>
                            <td>{{ assignment.equipment.reference }}</td>
                        </tr>
                        <tr>
                            <th>Catégorie</th>
                            <td>{{ assignment.equipment.category.name }}</td>
                        </tr>
                        <tr>
                            <th>État</th>
                            <td>
                                {% set s = assignment.equipment.state %}
                                {% set badge = s == 'neuf' ? 'primary' : (s == 'utilisé' ? 'info' : 'danger') %}
                                <span class="badge bg-{{ badge }} text-uppercase">{{ s }}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        {% if is_granted('ROLE_ADMIN') %}
            {% if not assignment.deletedAt %}
                {{ include('assignment/_delete_form.html.twig') }}
            {% else %}
                {{ include('assignment/_restore_form.html.twig') }}
            {% endif %}
        {% endif %}
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h2 class="h5 mb-3">Historique des mouvements</h2>
            {% if assignment.movements is empty %}
                <p class="text-muted m-0">Aucun mouvement enregistré pour cette affectation.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Quantité</th>
                                <th>Magasin</th>
                                <th>Référence matériel</th>
                                <th>Utilisateur</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for mov in assignment.movements %}
                                <tr>
                                    <td>{{ mov.occurredAt|date('Y-m-d H:i') }}</td>
                                    <td>
                                        {% if mov.type == 'ajout' %}
                                            <span class="badge bg-primary">Ajout</span>
                                        {% elseif mov.type == 'retour' %}
                                            <span class="badge bg-warning text-dark">Retour</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ mov.type }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ mov.quantity }}</td>
                                    <td>{{ mov.store.name }}</td>
                                    <td>{{ mov.equipment.reference }}</td>
                                    <td>{{ mov.performedBy ? mov.performedBy.fullName : '—' }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    {% if not assignment.deletedAt %}
    <div class="card mt-4">
        <div class="card-body">
            <h2 class="h5">Retour de matériel</h2>
            <p class="mb-2">Quantité restante à retourner: <strong>{{ assignment.quantity - assignment.returnedQuantity }}</strong></p>
            <form method="post" action="{{ path('app_assignment_return', {'id': assignment.id}) }}" class="row g-2 align-items-center">
                <div class="col-12 col-md-4 col-lg-3">
                    <input type="number" name="returned_quantity" class="form-control form-control-lg w-100" min="1" max="{{ assignment.quantity - assignment.returnedQuantity }}" placeholder="Quantité à retourner" required>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outilne-danger" type="submit"><i class="fa-solid fa-rotate-left me-1"></i>Enregistrer le retour</button>
                </div>
            </form>
        </div>
    </div>
    {% else %}
    <div class="alert alert-danger mt-4">Cette affectation est archivée. Consultation seule.</div>
    {% endif %}
{% endblock %}
