{#
  Template: Liste des matériels
  Objectif: Permettre le filtrage par catégorie, la recherche texte, et la navigation paginée.
  Données attendues: equipment (liste), categories, categoryId, q, page, pages, limit.
  Notes:
    - Les badges affichent le nombre d’affectations par matériel.
    - Les filtres sont persistés dans la pagination via la query string.
#}
{% extends 'base.html.twig' %}

{% block title %}Matériels{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Matériels</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_equipment_new') }}" class="btn btn-outilne-primary"><i class="fa-solid fa-plus me-1"></i>Nouveau matériel</a>
        {% endif %}
    </div>

    <form method="get" class="row g-3 mb-3">
        <div class="col-sm-3">
            <label class="form-label">Catégorie</label>
            <select name="category" class="form-select" onchange="this.form.submit()">
                <option value="">Toutes</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}" {% if categoryId is defined and categoryId == cat.id %}selected{% endif %}>{{ cat.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-sm-4">
            <label class="form-label">Recherche</label>
            <input type="text" name="q" value="{{ q|default('') }}" class="form-control" placeholder="Nom ou référence">
        </div>

        <div class="col-sm-6 align-self-end d-flex gap-2">
            <input type="hidden" name="limit" value="{{ limit }}">
                <div class="btn-group" role="group" aria-label="Basic example">
            <button class="btn btn-outilne-primary" type="submit"><i class="fa-solid fa-filter me-1"></i>Filtrer</button>
            <a class="btn btn-outilne-primary text-nowrap" href="{{ path('app_equipment_index') }}"><i class="fa-solid fa-rotate-right me-1"></i>Réinitialiser</a>
            <button class="btn btn-outilne-info" type="submit" name="low_stock" value="1"><i class="fa-solid fa-filter me-1"></i>Stock faible</button>
            <button class="btn btn-outilne-info" type="submit" name="out_of_stock" value="1"><i class="fa-solid fa-filter me-1"></i>Rupture de stock</button>
            </div>
        </div>
    </form>

    <div class="card">
    <table class="table table-hover mb-0 table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Statut</th>
                <th>Disponibilité</th>
                <th>Affectations</th>
                <th>Référence</th>
                <th>Catégorie</th>
                <th>État</th>
                <th>Stock</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>{{ equipment.name }}</td>
                <td>
                    {% if equipment.deletedAt %}
                        <span class="badge bg-danger">Mat. archivé</span>
                    {% else %}
                        <span class="badge bg-info">Mat. actif</span>
                    {% endif %}
                </td>
                <td>
                    {# Disponibilité: En stock si stockQuantity > 0, sinon Assigné si affectations actives #}
                    {% set activeAssigned = 0 %}
                    {% for a in equipment.assignments %}
                        {% if a.deletedAt is null %}
                            {% set remaining = a.quantity - (a.returnedQuantity ?: 0) %}
                            {% if remaining > 0 %}
                                {% set activeAssigned = activeAssigned + remaining %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                    {% if equipment.stockQuantity > 0 %}
                        <span class="badge bg-primary">En stock</span>
                    {% elseif activeAssigned > 0 %}
                        <span class="badge bg-primary">Assigné</span>
                    {% else %}
                        <span class="badge bg-danger">Indisponible</span>
                    {% endif %}
                </td>
                <td>
                    <span class="badge bg-primary">Affectations: {{ equipment.assignments|length }}</span>
                </td>
                <td>{{ equipment.reference }}</td>
                <td>{{ equipment.category.name }}</td>
                <td>
                    {% set badge, state_text = 'secondary', 'N/A' %}
                    {% if equipment.state == 'neuf' %}
                        {% set badge, state_text = 'primary', 'Neuf' %}
                    {% elseif equipment.state == 'utilisé' %}
                        {% set badge, state_text = 'info', 'Utilisé' %}
                    {% elseif equipment.state == 'endommagé' %}
                        {% set badge, state_text = 'danger', 'Endommagé' %}
                    {% endif %}
                    <span class="badge bg-{{ badge }}">{{ state_text }}</span>
                </td>
                <td>{{ equipment.stockQuantity }}</td>
                <td>
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="{{ path('app_equipment_show', {'id': equipment.id}) }}" class="btn btn-sm btn-outilne-primary"><i class="fa-solid fa-eye me-1"></i>Voir</a>
                        {% if not equipment.deletedAt %}
                            <a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}" class="btn btn-sm btn-outilne-info"><i class="fa-solid fa-pen me-1"></i>Éditer</a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            {% if not equipment.deletedAt %}
                                {{ include('equipment/_delete_form.html.twig') }}
                            {% else %}
                                {{ include('equipment/_restore_form.html.twig') }}
                            {% endif %}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center text-muted">Aucun matériel pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <nav class="mt-3" aria-label="Pagination">
        <ul class="pagination justify-content-end">
            <li class="page-item {% if page <= 1 %}disabled{% endif %}">
                <a class="page-link" href="?page={{ page - 1 }}&limit={{ limit }}{% if categoryId is defined and categoryId %}&category={{ categoryId }}{% endif %}{% if q is defined and q %}&q={{ q }}{% endif %}{% if archived|default(false) %}&archived=1{% endif %}{% if low_stock|default(false) %}&low_stock=1{% endif %}{% if out_of_stock|default(false) %}&out_of_stock=1{% endif %}">Précédent</a>
            </li>
            <li class="page-item disabled"><span class="page-link">Page {{ page }} / {{ pages }}</span></li>
            <li class="page-item {% if page >= pages %}disabled{% endif %}">
                <a class="page-link" href="?page={{ page + 1 }}&limit={{ limit }}{% if categoryId is defined and categoryId %}&category={{ categoryId }}{% endif %}{% if q is defined and q %}&q={{ q }}{% endif %}{% if archived|default(false) %}&archived=1{% endif %}{% if low_stock|default(false) %}&low_stock=1{% endif %}{% if out_of_stock|default(false) %}&out_of_stock=1{% endif %}">Suivant</a>
            </li>
        </ul>
    </nav>
{% endblock %}
