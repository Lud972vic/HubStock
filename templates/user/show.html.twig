{% extends 'base.html.twig' %}
{% block title %}Détails utilisateur{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">{{ user.fullName }}</h1>
  <div class="btn-group">
    <a class="btn btn-warning" href="{{ path('app_user_edit', {id: user.id}) }}"><i class="fa-solid fa-pen me-1"></i>Modifier</a>
    <a class="btn btn-danger" href="{{ path('app_user_change_password', {id: user.id}) }}"><i class="fa-solid fa-key me-1"></i>Mot de passe</a>
  </div>
  </div>

<div class="row g-3">
  <div class="col-md-6">
    <div class="card"><div class="card-body">
      <dl class="row mb-0">
        <dt class="col-sm-4">Email</dt><dd class="col-sm-8">{{ user.email }}</dd>
        <dt class="col-sm-4">Rôles</dt><dd class="col-sm-8">{{ user.roles|join(', ') }}</dd>
        <dt class="col-sm-4">Statut</dt><dd class="col-sm-8">{% if user.isActive %}<span class="badge bg-success">Actif</span>{% else %}<span class="badge bg-secondary">Inactif</span>{% endif %}</dd>
      </dl>
    </div></div>
  </div>
  <div class="col-md-6">
    <div class="card"><div class="card-body">
      <h2 class="h6">Historique</h2>
      <ul class="list-unstyled mb-0">
        {% for a in audits %}
          <li class="small text-muted">{{ a.occurredAt ? a.occurredAt|date('Y-m-d H:i') : '' }} — {{ a.action }}</li>
        {% else %}
          <li class="small text-muted">Aucun historique</li>
        {% endfor %}
      </ul>
    </div></div>
  </div>
</div>

<div class="mt-3">
  <a href="{{ path('app_user_index') }}" class="btn btn-danger"><i class="fa-solid fa-arrow-left me-1"></i>Retour à la liste</a>
  </div>
{% endblock %}