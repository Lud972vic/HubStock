{{ form_start(form) }}
  <div class="row g-3">
    <div class="col-md-6">{{ form_row(form.fullName) }}</div>
    <div class="col-md-6">{{ form_row(form.email) }}</div>
    <div class="col-12">
      {{ form_row(form.roles) }}
    </div>
    <div class="col-12">{{ form_row(form.isActive) }}</div>
    {% if form.plainPassword is defined %}
      <div class="col-md-6">{{ form_row(form.plainPassword.first) }}</div>
      <div class="col-md-6">{{ form_row(form.plainPassword.second) }}</div>
    {% endif %}
  </div>
  <div class="mt-3">
    <button class="btn btn-outilne-primary"><i class="fa-solid fa-floppy-disk me-1"></i>{{ button_label|default('Enregistrer') }}</button>
  </div>
{{ form_end(form) }}