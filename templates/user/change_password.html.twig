{% extends 'base.html.twig' %}
{% block title %}Changer le mot de passe{% endblock %}
{% block body %}
<h1 class="h3 mb-3">Changer le mot de passe — {{ user.fullName }}</h1>
{{ form_start(form) }}
  <div class="row g-3">
    <div class="col-md-6">{{ form_row(form.plainPassword.first) }}</div>
    <div class="col-md-6">{{ form_row(form.plainPassword.second) }}</div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary"><i class="fa-solid fa-floppy-disk me-1"></i>Mettre à jour</button>
    <a href="{{ path('app_user_show', {id: user.id}) }}" class="btn btn-danger"><i class="fa-solid fa-arrow-left me-1"></i>Annuler</a>
  </div>
{{ form_end(form) }}
{% endblock %}