{% set isArchived = store.deletedAt is not null %}
<form method="post" action="{{ path('app_store_delete', {'id': store.id}) }}" {% if not isArchived %}data-confirm="Archiver le magasin « {{ store.name }} » ?" data-confirm-type="store"{% endif %}>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ store.id) }}">
    <button class="btn btn-sm btn-outilne-danger" {% if isArchived %}disabled title="Déjà archivé."{% endif %}><i class="fa-solid fa-box-archive me-1"></i>Archiver</button>
</form>
